 import java.util.Scanner;

/* TO DO: CREATE MONSTER CLASS. RESTRUCTURE CODE TO BE MORE EXPANDABLE. WORK ON BUFFEREDREADER FOR READING MOVELIST.

* COMPLEX FORMULAS FOR ATTACK(USE DEFENSE AND/OR EVASIVENESS), LEVEL UP SYSTEM

*

*

*/

public class Arena {

    public static void main(String[] args) {

        Character one = new Character("ANDREW", new Attacks(5, 0, "tackle"));
        Character two = new Character("BLADE", new Attacks(4, .4 , "scratch"));
        battle(one, two);
    }

    public static void battle (Character theCharacter1, Character theCharacter2){

        boolean oneFirst = false;

        boolean gameEnded = false;

        if(theCharacter1.getSpeed() >= theCharacter2.getSpeed()){

            oneFirst = true;

        }

        while(!gameEnded){

        	
            if(oneFirst){

                theCharacter1.attackOther(theCharacter2);

            }    else{

                theCharacter2.attackOther(theCharacter1);

            }

            if(oneFirst){

                oneFirst = false;

            }

            else{

                oneFirst = true;

            }

            System.out.println(theCharacter1.getName() + "'s health: " + theCharacter1.getHealth());

            System.out.println(theCharacter2.getName() + "'s health: " + theCharacter2.getHealth());

            if(theCharacter1.getHealth() <= 0){

                gameEnded = true;

                System.out.println("Game Over. " + theCharacter2.getName() + " wins.");

                theCharacter2.setExperience(theCharacter2.getExperience() + 5);

                if(theCharacter2.getExperience() >= theCharacter2.getExperienceBar())

                {

                    theCharacter2.levelUp();

                }

            } else if(theCharacter2.getHealth() <= 0){

                gameEnded = true;

                System.out.println("Game Over. " + theCharacter1.getName() + " wins.");

                theCharacter1.setExperience(theCharacter1.getExperience() + 5);

                if(theCharacter1.getExperience() >= theCharacter1.getExperienceBar())

                {

                    theCharacter1.levelUp();

                }

            }

            if(gameEnded){

                Scanner scanner = new Scanner(System.in);

                System.out.println("Type 'yes' to battle again.");

                String input = scanner.nextLine().toLowerCase();

                if(input.compareTo("yes") == 0)

                {

                    theCharacter1.fullHeal();

                    theCharacter2.fullHeal();

                    battle(theCharacter1, theCharacter2);

                }

            }

        }

    }

}







